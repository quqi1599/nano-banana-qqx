# 数据库配置
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nbnb
REDIS_URL=redis://localhost:6379/0

# 运行环境
ENVIRONMENT=development
LOG_LEVEL=INFO
METRICS_ENABLED=true

# JWT 配置
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# Token 安全
TOKEN_ENCRYPTION_KEY=your_fernet_key_here
TOKEN_FAILURE_THRESHOLD=3
TOKEN_COOLDOWN_SECONDS=300
TOKEN_DISABLE_THRESHOLD=10

# NewAPI 配置
NEWAPI_BASE_URL=https://nanobanana2.peacedejiai.cc

# 积分配置
CREDITS_GEMINI_3_PRO=10
CREDITS_GEMINI_25_FLASH=5
CREDITS_NEW_USER_BONUS=50

# 管理员配置
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_EMAILS=banana@peacedejiai.cc  # 可以成为管理员的邮箱列表，多个用逗号分隔
ADMIN_NOTIFICATION_EMAILS=admin@example.com,ops@example.com
ADMIN_INIT_TOKEN=  # 管理员初始化令牌（生产环境建议设置）
ADMIN_ACTION_CONFIRM_TTL_SECONDS=300

# 阿里云邮件推送 (DirectMail SMTP)
ALIYUN_SMTP_HOST=smtpdm.aliyun.com
ALIYUN_SMTP_PORT=465
ALIYUN_SMTP_USER=your-sender@example.com
ALIYUN_SMTP_PASSWORD=your-smtp-password
ALIYUN_EMAIL_FROM_NAME=DEAI
ALIYUN_EMAIL_REPLY_TO=your-reply@example.com

# 验证码配置
EMAIL_CODE_EXPIRE_MINUTES=10

# 滑块验证码配置
CAPTCHA_SECRET_KEY=your-captcha-secret-key-change-in-production
CAPTCHA_CHALLENGE_TTL_SECONDS=120
CAPTCHA_TICKET_TTL_SECONDS=600
CAPTCHA_CHALLENGE_MAX_ATTEMPTS=5

# Sentry
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.0
SENTRY_PROFILES_SAMPLE_RATE=0.0
